@using OdeToFood.Core
@model Restaurant

<div class="card">
    <div class="card-header">
        <h3>@Model.Name</h3>
    </div>
    <div class="card-body">
        <span>Location: @Model.Location</span>
        <span>Cuisine: @Model.Cuisine</span>
    </div>
    <div class="card-footer">
        <a class="btn btn-dark" asp-page="./Detail" asp-route-restaurantId="@Model.Id">details</a>
        <a class="btn btn-dark" asp-page="./Edit" asp-route-restaurantId="@Model.Id">edit</a>
        <a class="btn btn-dark" asp-page="./Delete" asp-route-restaurantId="@Model.Id">delete</a>
    </div>
</div>